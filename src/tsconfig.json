{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "module": "es2020",
    "target": "es2021",
    "lib": [
      "es2021"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "strictFunctionTypes": true,
    "moduleResolution": "bundler",
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*"
  ]
}